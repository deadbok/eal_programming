    {\cf8\b try}:\par
        {\cf5\i # Use the datetime object function strptime to from correct form,}\par
        {\cf5\i # gives us free validation of the input.}\par
        date {\cf4 =} datetime{\cf4 .}strptime(date_str, {\cf2 '}{\cf2 %}{\cf2 m/}{\cf9\b %d}{\cf2 /}{\cf2 %}{\cf2 Y}{\cf2 '})\par
    {\cf8\b except} {\cf24\b ValueError}:\par
        {\cf5\i # Complain when something unexpected was entered.}\par
        {\cf8\b print}({\cf2 '}{\cf10\b \\n}{\cf2 Please enter a date of the form mm/dd/yyyy.}{\cf2 '})\par
        {\cf8 exit}({\cf4 1})\par
\par
    {\cf8\b return} date\par
\par
{\cf8\b def} {\cf19 main}():\par
    {\cf2\i '''\par
    Main entry point.\par
    '''}\par
    date {\cf4 =} get_date()\par
